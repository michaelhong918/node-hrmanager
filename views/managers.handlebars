<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10 py-2">
      <div class="row">
        <h2>Mangers</h2>
        <div class="col-md-10"></div>
        <div class="col-md-2">
          <button type="button" class="create btn btn-outline-primary w-100">
            Add a manager
          </button>
        </div>
      </div>
      <table class="table table-striped text-center align-middle">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Firstname</th>
            <th scope="col">Lastname</th>
            <th scope="col">Department</th>
            <th scope="col">Created At</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          {{#each managers}}
            <tr data-manager="{{id}}">
              <th scope="col">{{id}}</th>
              <td>{{firstname}}</td>
              <td>{{lastname}}</td>
              <td>{{department}}</td>
              <td>{{createdAt}}</td>
              <td>
                <button class="edit btn btn-primary">Edit</button>
                <button class="delete btn btn-danger">Delete</button>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
<!-- Custom Script -->
<script src="/js/managers.js" type="text/javascript"></script>